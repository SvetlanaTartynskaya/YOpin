<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Тень -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#22000000" />
            <corners android:radius="10dp" />
            <padding android:bottom="1dp" android:right="1dp" />
        </shape>
    </item>
    <!-- Основной фон -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/accent_sand" />
            <corners android:radius="10dp" />
            <stroke
                android:width="1dp"
                android:color="@color/dark_green" />
        </shape>
    </item>
    <!-- Внутренний контейнер -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="8dp" />
            <padding
                android:bottom="8dp"
                android:left="10dp"
                android:right="10dp"
                android:top="8dp" />
        </shape>
    </item>
    <!-- Декоративный элемент слева -->
    <item android:left="8dp" android:gravity="start|center_vertical">
        <shape android:shape="rectangle">
            <size android:width="3dp" android:height="20dp" />
            <solid android:color="@color/accent_leaf" />
            <corners android:radius="1.5dp" />
        </shape>
    </item>
</layer-list> 